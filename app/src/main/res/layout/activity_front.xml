<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrontActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/get_start" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="345dp"
        android:layout_height="139dp"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="@string/welcome"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.439"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.693" />

    <ImageView
        android:id="@+id/tutimg"
        android:layout_width="338dp"
        android:layout_height="134dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:srcCompat="@drawable/round_btn" />

    <ImageView
        android:id="@+id/stuimg"
        android:layout_width="338dp"
        android:layout_height="134dp"
        android:layout_below="@+id/tutimg"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tutimg"
        app:layout_constraintVertical_bias="0.198"
        app:srcCompat="@drawable/round_btn" />

    <TextView
        android:id="@+id/tuttxt"
        android:layout_width="255dp"
        android:layout_height="72dp"
        android:layout_alignStart="@+id/tutimg"
        android:layout_alignTop="@+id/tutimg"
        android:layout_alignEnd="@+id/tutimg"
        android:layout_alignBottom="@+id/tutimg"
        android:gravity="center"
        android:text="Tutor"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/stuimg"
        app:layout_constraintEnd_toEndOf="@+id/stuimg"
        app:layout_constraintStart_toStartOf="@+id/stuimg"
        app:layout_constraintTop_toTopOf="@+id/stuimg" />

    <TextView
        android:id="@+id/stutxt"
        android:layout_width="246dp"
        android:layout_height="59dp"
        android:layout_alignStart="@+id/stuimg"
        android:layout_alignTop="@+id/stuimg"
        android:layout_alignEnd="@+id/stuimg"
        android:layout_alignBottom="@+id/stuimg"
        android:gravity="center"
        android:text="Student"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tutimg"
        app:layout_constraintEnd_toEndOf="@+id/tutimg"
        app:layout_constraintStart_toStartOf="@+id/tutimg"
        app:layout_constraintTop_toTopOf="@+id/tutimg" />


</androidx.constraintlayout.widget.ConstraintLayout>